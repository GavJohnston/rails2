<h1>Editing clinic</h1>

<%= form_for :clinic, url: clinic_path(@clinic), method: :patch do |f| %>

 <% if @clinic.errors.any? %>
 <div id="error_explanation">
 <h2>
 <%= pluralize(@clinic.errors.count, "error") %> prohibited
 this clinic from being saved:
 </h2>
 <ul>
 <% @clinic.errors.full_messages.each do |msg| %>
