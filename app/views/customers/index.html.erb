<!---------------------PATIENT DETAILS------------------->
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Doctor Name</th>
      <th scope="col">Date of Birth</th>

    </tr>
  </thead>
  <tbody>
 <% @customers.each do |customer| %>
 <tr>
 <td><strong><%= customer.customerfirst_name %></strong></td>
  <td><strong><%= customer.customerlast_name %></strong></td>
   <td><strong><%= customer.customeremail %></strong></td>
 <td><strong><%= customer.customernumber %></strong></td>
  <td><strong><%= customer.customeraddress %></strong></td>
   <td><strong><%= customer.customerdob %></strong></td>
      <td><strong>Created <%= time_ago_in_words(customer.created_at) %> ago</strong></td>
   
<!------------------------------------------------------------->



<!------------------SHOW/EDIT/DELETE BUTTONS------------------------>


 <td><strong><%= link_to 'Show', customer_path(customer), class: 'btn btn-info btn-lg btn-block' %></strong></td>
 <td><strong><%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-info btn-lg btn-block' %></strong></td> 
 <td><strong><%= link_to 'Destroy', customer_path(customer), 
 method: :delete,
 data: { confirm: 'Are you sure?' }, class: 'btn btn-info btn-lg btn-block' %></strong></td> 
 </tr>
   </tbody>
 <% end %>
</table> 