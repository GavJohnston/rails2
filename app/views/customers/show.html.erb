<!--------------------ADDING NEW VISIT------------------------->
<div class="fixed-top">
<p>
 <a class="btn btn-primary btn-lg btn-block" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    Add A new Visit
  </a>
 
<div class="collapse" id="collapseExample">
  <div class="card card-body"> 
 
<h3>Add a Visit:</h3>
<%= form_for([@customer, @customer.visits.build]) do |f| %>



<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Current Date</span>
   <input type="date" class="form-control" placeholder="Current date" aria-describedby="sizing-addon1" <%= f.date_field :visitdate, :value => Time.now.strftime('%Y-%m-%d') %>
</div>
</p>


<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Next Appointment</span>
   <input type="date" class="form-control" placeholder="Next Appointment Date" aria-describedby="sizing-addon1" <%= f.date_field :visitnextdate, :value => Time.now.strftime('%Y-%m-%d') %>

</div>
</p>



<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Issue</span>
   <input type="text" class="form-control" placeholder="Issue" aria-describedby="sizing-addon1" <%= f.text_field :visitissue%>
</div>
</p>


<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Resolution</span>
   <input type="text" class="form-control" placeholder="Resolution" aria-describedby="sizing-addon1" <%= f.text_area :visitresolution%>
</div>
</p>



<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">Additional info
 </span>
   <input type="text" class="form-control" placeholder="Additional info" aria-describedby="sizing-addon1" <%= f.text_field :visitimage %>
</div>
</p>




<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Doctor name</span>
   <input type="text" class="form-control" placeholder="Doctor name" aria-describedby="sizing-addon1" <%= f.text_field :visitdoctor%>
</div>
</p>
<p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Prescription</span>
   <input type="text" class="form-control" placeholder="Prescription" aria-describedby="sizing-addon1" <%= f.text_field :visitprescription%>
</div>
</p>

<p>
<div class="input-group input-group-lg">

    <%= f.file_field :image %>
</div>
</p>



 <p>
 <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>

 </p>
 </div>
 </div>
 </p>
 </div>
 </br>
<% end %> 
