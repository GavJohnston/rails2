<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


<div class="fixed-top">

  <p>
    
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Email </span>
   <input type="email" class="form-control" placeholder="email" aria-describedby="sizing-addon1" <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>
</p>
  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
    <p>
    
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Password </span>
<input type="password" class="form-control" placeholder="Password" aria-describedby="sizing-addon1" <% if @minimum_password_length %>
    <% end %><%= f.password_field :password, autocomplete: "off" %>
</div>
</p>

<h5>(Leave blank if you dont want to change it)</h5>
    
    <p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Password confirmartion</span>
   <input type="password" class="form-control" placeholder="Password" aria-describedby="sizing-addon1"
   <%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>
</p>


    <p>
<div class="input-group input-group-lg">
   <span class="input-group-addon" id="sizing-addon1">
 Current Password</span>
   <input type="password" class="form-control" placeholder="Current Password" aria-describedby="sizing-addon1"
   <%= f.password_field :current_password, autocomplete: "off" %>
</div>
</p>

   <p>
<button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
 </p>
<% end %>

